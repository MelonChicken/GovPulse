        "시스템 장애로 인한"
      ],
      "probe_paths": ["/robots.txt"]
    },
    "www.gov.kr": {
      "keywords": [
        "정부24 점검",
        "민원 서비스 중단"
      ],
      "probe_paths": ["/robots.txt", "/sitemap.xml"]
    },
    "*.go.kr": {
      "keywords": [
        "정부 시스템 점검",
        "공공서비스 일시 중단",
        "전산 장애",
        "네트워크 점검"
      ]
    },
    "httpbin.org": {
      "keywords": [
        "test maintenance",
        "demo service down"
      ]
    }
  },
  "regex_keywords": [
    { "pattern": "점검\\s*중", "flags": "i" },
    { "pattern": "원복\\s*중", "flags": "i" },
    { "pattern": "복구\\s*중", "flags": "i" },
    { "pattern": "정상화\\s*작업\\s*중", "flags": "i" },
    { "pattern": "접속\\s*불가", "flags": "i" },
    { "pattern": "접속.*원활하지.*않", "flags": "i" },
    { "pattern": "접속.*지연", "flags": "i" },
    { "pattern": "이용\\s*불가", "flags": "i" },
    { "pattern": "이용\\s*제한", "flags": "i" },
    { "pattern": "일시\\s*중단", "flags": "i" },
    { "pattern": "대체.*사이트.*이용", "flags": "i" },
    { "pattern": "법령정보.*열람.*불가", "flags": "i" },
    { "pattern": "서비스.*복구.*중", "flags": "i" },
    { "pattern": "(bad\\s*gateway|gateway\\s*time\\s*out|service\\s*unavailable)", "flags": "i" },
    { "pattern": "(access\\s*denied|temporarily\\s*unavailable|we\\s*are\\s*working\\s*to\\s*restore)", "flags": "i" },
    { "pattern": "internal\\s*server\\s*error", "flags": "i" }
  ],
  "settings": {
    "case_insensitive": true,
    "normalize_whitespace": true,
    "max_bytes_to_scan": 3000000,
    "timeout_seconds": 8,
    "retries": 1,
    "user_agent": "healthcheck-bot/1.0",
    "check_title": true,
    "text_mime_only": true,
    "min_text_length_for_healthy": 1000
  }
}
